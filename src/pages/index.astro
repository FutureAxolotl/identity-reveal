---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Identity Reveal">
	<main>
		<div class="dialogueBox">
			<h1 id="text1"></h1>
			<h1 id="text2"></h1>
			<button></button>
		</div>	
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 24px;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
	.dialogueBox {
    	bottom:0%;

		position: fixed;

		border: 5px double #f6f6f6;
		background-color: black;
		text-align: center;
		color: white;
	}
</style>
<script>
	var i1 = 0;
	var txt1 = "There's something I've been considering for a while and have been hiding it from you..."
	var speed = 70;

	function t1() {
		if (i1 < txt1.length) {
			document.getElementById("text1").innerHTML += txt1.charAt(i1);
			i1++;
			setTimeout(t1, speed);
		}
	}

	var i2 = 0;
	var txt2 = "I have come to the conclusion that I am not straight. I hope you can come to accept me this way.";
	function t2() {
		if (i2 < txt2.length) {
			document.getElementById("text2").innerHTML += txt2.charAt(i2);
			i2++;
			setTimeout(t1, speed);
		}
	}
	
	t1();
</script>